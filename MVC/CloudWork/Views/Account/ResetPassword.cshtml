@model CloudWork.Model.ViewModels.ResetPasswordViewModel

@{
	ViewData["Title"] = "密码重置";
}

<div class="container my-5">
	<div class="row justify-content-center">
		<div class="col-md-6">
			<div class="card shadow-sm">
				<div class="card-header bg-primary text-white text-center">
					<h4 class="mb-0">Reset Your Password</h4>
				</div>
				<div class="card-body">
					@if (Model.IsSuccess == true)
					{
						<div class="alert alert-success" role="alert">
							密码重置成功，请使用新密码<a asp-controller="Account" asp-action="Login" class="alert-link">登录</a>
						</div>
					}
					else
					{
						<p class="text-muted text-center mb-4">
							请在下方输入您的新密码
						</p>

						<form method="post" asp-action="ResetPassword" asp-controller="Account" novalidate>
							<div asp-validation-summary="All" class="alert alert-danger" role="alert" style="display:none;"></div>
							<input asp-for="Token" type="hidden" />
							<input asp-for="Email" type="hidden" />

							<div class="form-group mb-3">
								<label asp-for="PasswordHash" class="form-label fw-bold">Password</label>
								<input asp-for="PasswordHash" class="form-control" placeholder="输入新密码" />
								<span asp-validation-for="PasswordHash" class="text-danger"></span>
							</div>

							<div class="form-group mb-3">
								<label asp-for="ConfirmPasswordHash" class="form-label fw-bold">Confirm Password</label>
								<input asp-for="ConfirmPasswordHash" class="form-control" placeholder="重复输入密码" />
								<span asp-validation-for="ConfirmPasswordHash" class="text-danger"></span>
							</div>

							<div class="d-grid">
								<button type="submit" class="btn btn-primary btn-lg">密码确认</button>
							</div>
						</form>
					}

				</div>
				<div class="card-footer text-center">
					<p class="mb-0">
						<a asp-controller="Account" asp-action="Login" class="text-primary text-decoration-none">
							返回登录
						</a>
					</p>
				</div>
			</div>
		</div>
	</div>
</div>