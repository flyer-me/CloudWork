@model CloudWork.Model.ViewModels.SetPasswordViewModel

@{
    ViewData["Title"] = "设置密码";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header text-center bg-primary text-white">
                    <h4>设置账户密码</h4>
                </div>
                <div class="card-body">
                    <p class="text-info text-center mb-4">
                        为保护账户安全，你可以在此处设置一个账户密码
                    </p>
                    <form method="post" asp-action="SetPassword" asp-controller="Account">
                        <div asp-validation-summary="All" class="text-danger"></div>

                        <div class="form-group mb-3">
                            <label asp-for="Password" class="form-label">密码</label>
                            <input asp-for="Password" class="form-control" placeholder="输入密码" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="ConfirmPassword" class="form-label">确认密码</label>
                            <input asp-for="ConfirmPassword" class="form-control" placeholder="重复输入密码" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">提交</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>