@{
	ViewData["Title"] = "邮件确认 - CloudWork";
	var error = ViewBag.ErrorMessage as string;
	var success = ViewBag.Success as string;
}

<div class="container mt-5">
	<div class="row">
		<div class="col-md-8 offset-md-2">
			<div class="card shadow">
				<div class="card-header">
					<h3 class="card-title mb-0">Email Confirmation</h3>
				</div>
				<div class="card-body">
					@if (!string.IsNullOrEmpty(success))
					{
						<div class="alert alert-success" role="alert">
							<strong>成功</strong> @success
						</div>
						<p>
							您可以通过
							<strong>
								<a href="@Url.Action("Login", "Account")" class="font-weight-bold">登录</a>
							</strong>
							并开始使用 <strong>！</strong>.
						</p>
					}
					@* Otherwise, if there’s an error message, display an error alert *@
					else if (!string.IsNullOrEmpty(error))
					{
						<div class="alert alert-danger" role="alert">
							<strong>出错了</strong> @error
						</div>
						<p>
							如果链接过期或无法收到，请通过
							<a href="@Url.Action("ResendConfirmationEmail", "Account")" class="font-weight-bold">
								重新发送确认邮件
							</a>
						</p>
					}
				</div>
			</div>
		</div>
	</div>
</div>